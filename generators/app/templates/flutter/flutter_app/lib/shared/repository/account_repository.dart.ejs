import 'dart:convert';
import 'dart:developer';
import 'package:<%= baseName %>/account/user/models/user_model.dart';
import 'package:<%= baseName %>/shared/utils/http_utils.dart';

class AccountRepository {
  User? _user;

  AccountRepository();

  Future<User?> getAccount() async {
    final response = await HttpUtils.getRequest("/account");
    var decode = utf8.decode(response.bodyBytes);
    const JsonDecoder decoder = JsonDecoder();
    try {
      _user = User.fromMap(decoder.convert(decode));
    } catch (e) {
      log('Error decodificaci√≥n json: $e');
    }

    return _user;
  }

  Future<String?> saveAccount(User user) async {
    final response = await HttpUtils.postRequest<User>("/account", user);
    String? result;
    if (response.statusCode != 200) {
      if (response.headers[HttpUtils.errorHeader] != null) {
        result = response.headers[HttpUtils.errorHeader];
      } else {
        result = HttpUtils.errorServerKey;
      }
    } else {
      result = HttpUtils.successResult;
    }

    return result;
  }
}