import 'package:animate_do/animate_do.dart';
import 'package:flutter/material.dart';
import 'package:flutter_bloc/flutter_bloc.dart';
import 'package:flutter_custom_clippers/flutter_custom_clippers.dart';
import 'package:<%= baseName %>/account/login/bloc/login_bloc.dart';
import 'package:<%= baseName %>/account/login/login_routes.dart';
import 'package:<%= baseName %>/account/login/views/login_form.dart';
import 'package:<%= baseName %>/shared/repository/authentication_repository.dart';

class LoginScreen extends StatelessWidget {
  const LoginScreen({Key? key}) : super(key: LoginRoutes.screenKey);

  @override
  Widget build(BuildContext context) {
    final size = MediaQuery.of(context).size;

    return BlocProvider<LoginBloc>(
      create: (context) => LoginBloc(
        authenticationRepository:
            RepositoryProvider.of<AuthenticationRepository>(context),
      ),
      child: Container(
        alignment: Alignment.center,
        decoration: const BoxDecoration(
          image: DecorationImage(
            image: AssetImage("assets/images/fondo.jpg"),
            fit: BoxFit.cover,
          ),
        ),
        child: Scaffold(
          backgroundColor: Colors.transparent,
          body: SingleChildScrollView(
            child: Stack(
              children: [
                Container(
                  height: size.height,
                ),
                Positioned(
                  bottom: 0,
                  left: 0,
                  right: 0,
                  child: ClipPath(
                    clipper: OvalTopBorderClipper(),
                    child: Container(
                      width: size.width,
                      height: 130,
                      color: const Color(0xff191918),
                    ),
                  ),
                ),
                Positioned(
                  bottom: 10,
                  right: (size.width / 2) - 125,
                  child: const Center(child: LoginFooter()),
                ),
                const LoginForm(),
              ],
            ),
          ),
        ),
      ),
    );
  }
}

class LoginFooter extends StatelessWidget {
  const LoginFooter({super.key});

  @override
  Widget build(BuildContext context) {
    return FadeInDown(
      delay: const Duration(milliseconds: 800),
      child: Container(
        height: 90,
        constraints: const BoxConstraints(
          maxWidth: 570.0,
        ),
        child: const Padding(
          padding: EdgeInsets.only(top: 20),
          child: Image(
            image: AssetImage('assets/images/banner.png'),
            width: 250,
          ),
        ),
      ),
    );
  }
}
