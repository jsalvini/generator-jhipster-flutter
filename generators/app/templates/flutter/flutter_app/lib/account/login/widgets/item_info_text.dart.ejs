import 'package:flutter/material.dart';

class ItemInfoText extends StatefulWidget {
  final String text;
  final Function? onPressed;

  const ItemInfoText({
    super.key,
    required this.text,
    this.onPressed,
  });

  @override
  State<ItemInfoText> createState() => _ItemInfoTextState();
}

class _ItemInfoTextState extends State<ItemInfoText> {
  bool isHover = false;

  @override
  Widget build(BuildContext context) {
    return GestureDetector(
      onTap: () {
        if (widget.onPressed != null) {
          widget.onPressed!();
        }
      },
      child: MouseRegion(
        cursor: SystemMouseCursors.click,
        onEnter: (event) => setState(() => isHover = true),
        onExit: (event) => setState(() => isHover = false),
        child: Container(
          margin: const EdgeInsets.symmetric(horizontal: 10.0, vertical: 5.0),
          child: Text(
            widget.text,
            style: TextStyle(
              fontSize: 12,
              color: Colors.grey,
              decoration:
                  isHover ? TextDecoration.underline : TextDecoration.none,
            ),
          ),
        ),
      ),
    );
  }
}
