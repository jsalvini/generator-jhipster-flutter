import 'package:formz/formz.dart';

enum UsernameValidationError { invalid }

extension UsernameValidationErrorX on UsernameValidationError {
  String get invalidMessage =>
      'El usuario debe contener m√°s de ${UsernameInput.numberMin}';
}

class UsernameInput extends FormzInput<String, UsernameValidationError> {
  const UsernameInput.pure() : super.pure('');
  const UsernameInput.dirty([super.value = '']) : super.dirty();

  static final const numberMin = 3;

  @override
  UsernameValidationError? validator(String value) {
    return value.length >= numberMin ? null : UsernameValidationError.invalid;
  }
}
