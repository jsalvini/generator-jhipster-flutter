import 'package:flutter/material.dart';
import 'package:flutter_bloc/flutter_bloc.dart';
import 'package:go_router/go_router.dart';
import 'package:<%= baseName %>/account/authentication/authentication.dart';
import 'package:<%= baseName %>/account/login/login.dart';
import 'package:<%= baseName %>/core/router/routes.dart';

class LoginRoutes {
  static const path = '/login';
  static const screenKey = Key('__loginScreen__');

  static final loginRoutes = <GoRoute>[
    GoRoute(
      name: <%= camelizedUpperFirstBaseName %>Routes.login,
      path: path,
      pageBuilder: (context, state) => MaterialPage(
        child: MultiBlocProvider(
          providers: [
            BlocProvider<LoginBloc>(
              create: (context) => LoginBloc(
                authenticationRepository:
                    RepositoryProvider.of<AuthenticationRepository>(context),
              ),
            ),
          ],
          child: const LoginScreen(),
        ),
      ),
    ),
  ];
}