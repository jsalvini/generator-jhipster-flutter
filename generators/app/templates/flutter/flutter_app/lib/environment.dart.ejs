import 'package:flutter_dotenv/flutter_dotenv.dart';

enum Environment { dev, prod }

class Constants {
  static Map<String, dynamic>? _config;
  <%_ if (enableTranslation) { _%>
  static final Map<String, String> languages = {'en':'English','es':'Espa√±ol'};
  static final String langStorageKey = 'locale';
  <%_ } _%>

  static void setEnvironment(Environment env) {
    switch (env) {
      case Environment.dev:
        _config = _Config.devConstants;
        break;
      case Environment.prod:
        _config = _Config.prodConstants;
        break;
    }
  }

  static get api {
    return _config![_Config.api];
  }
}

class _Config {
  static get api => "API";

  static String ipApi =
      dotenv.env['IP_API'] ?? 'No se configuro la ip de la API.';

  static String puertoApi =
      dotenv.env['PUERTO_API'] ?? 'No se configuro el puerto de la API.';

  static Map<String, dynamic> devConstants = {
    api: "http://$ipApi:$puertoApi/api",
  };

  static Map<String, dynamic> prodConstants = {
    api: "https://$ipApi/api",
  };
}
